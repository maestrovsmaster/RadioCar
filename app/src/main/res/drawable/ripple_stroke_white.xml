<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/black">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/black" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient android:type="linear" android:gradientRadius="250dp" android:angle="135"
                android:startColor="@color/primaryDark"
                android:centerColor="@color/primary"
                android:endColor="@color/primaryDark2" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="8dp"></corners> <!-- change this -->
            <stroke
                android:width="0dp"
                android:color="@color/black"/>
        </shape>
    </item>
</ripple>