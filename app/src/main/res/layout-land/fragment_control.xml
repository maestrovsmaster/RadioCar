<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="16dp"
    android:paddingStart="4dp"
    android:paddingEnd="16dp"
    android:weightSum="4"
    tools:layout_width="200dp">


    <com.maestrovs.radiocar.ui.components.WeatherWidget
        android:id="@+id/weatherWidget"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:weightSum="2"
        >


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="6dp"

            >

            <ImageView
                android:id="@+id/btBluetooth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@drawable/ic_bt_on"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:background="@drawable/ripple_gray_bl"
                android:clickable="true"
                android:focusable="true"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="6dp"
            android:layout_marginStart="16dp"

            >

            <ImageView
                android:id="@+id/btSettings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_settings"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:background="@drawable/ripple_gray_bl"
                android:clickable="true"
                android:focusable="true"
                />

        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="2"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="6dp">

            <ImageView
                android:id="@+id/btPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_teal"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_call" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            app:cardCornerRadius="6dp">

            <ImageView
                android:id="@+id/btNavigation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_green"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_navigation" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</LinearLayout>
