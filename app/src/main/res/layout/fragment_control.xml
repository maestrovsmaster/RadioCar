<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:weightSum="4"
    android:paddingVertical="16dp"
    android:paddingHorizontal="16dp"
    tools:layout_height="200dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_marginEnd="16dp"
        >

        <com.maestrovs.radiocar.ui.components.WeatherWidget
            android:id="@+id/weatherWidget"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/red"
            android:layout_marginTop="16dp"
            >



        </androidx.cardview.widget.CardView>



    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:cardCornerRadius="6dp" >

        <ImageView
            android:id="@+id/btPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_call"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:background="@drawable/ripple_teal"
            android:clickable="true"
            android:focusable="true"
            />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:cardCornerRadius="6dp"
        android:layout_marginStart="16dp"
        >

        <ImageView
            android:id="@+id/btNavigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_navigation"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:background="@drawable/ripple_green"
            android:clickable="true"
            android:focusable="true"
            />

    </androidx.cardview.widget.CardView>








</LinearLayout>
